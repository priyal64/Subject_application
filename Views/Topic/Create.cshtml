@model v_try.Models.Topic

<h1>Create New Topic</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TopicName">Topic Name</label>
        <input asp-for="TopicName" class="form-control" placeholder="Enter Topic Name" required />
    </div>

    <div class="form-group">
        <label for="SubjectId">Select Subject</label>
        <select asp-for="SubjectId" asp-items="ViewBag.Subjects" class="form-control" required>
            <option value="">-- Select a Subject --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>
