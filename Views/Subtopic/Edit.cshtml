@model v_try.Models.Subtopic
@{
    var topics = ViewBag.Topics as List<Topic>;
}

<h1>Edit SubTopic</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="SubtopicName">SubTopic Name</label>
        <input type="text" class="form-control" id="SubtopicName" name="SubtopicName" value="@Model.SubtopicName" required />
    </div>

   

    <div class="form-group">
        <label for="TopicId">Topic</label>
        <select class="form-control" id="TopicId" name="TopicId">
            @if (topics != null)
            {
                @foreach (var topic in topics)
                {
                    <option value="@topic.Id" selected="@(topic.Id == Model.TopicId ? "selected" : null)">
                        @topic.TopicName
                    </option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>