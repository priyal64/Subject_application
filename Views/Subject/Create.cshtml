@model v_try.Models.Subject

@{
    ViewData["Title"] = "Create New Subject";
}

<h1>Create New Subject</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SubjectName">Subject Name</label>
        <input type="text" class="form-control" asp-for="SubjectName" placeholder="Enter Subject Name" required />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>

